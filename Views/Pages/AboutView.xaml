<UserControl
    x:Class="StarEyes_GUI.Views.Pages.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource BorderRegion}" TargetType="Border" 
                x:Key="ItemBorder">
            <Setter Property="Margin" Value="10,10,10,0" />
            <Setter Property="Width" Value="{Binding AboutViewModel.ItemWidth}" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <hc:ScrollViewer>
            <WrapPanel x:Name="page">
                <Button x:Name="bt" >Command</Button>
                <Border Style="{StaticResource ItemBorder}">
                    <Label>ItemBorder</Label>
                </Border>
            </WrapPanel>
        </hc:ScrollViewer>
    </Grid>
</UserControl>
